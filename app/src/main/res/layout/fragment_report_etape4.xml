<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReportEtape4Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="30dp"
            app:contentPadding="2dp">

            <ImageButton
                android:id="@+id/imageButtonBackToEtape3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:contentDescription="chevronBack"
                android:src="@drawable/chevron_left"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/rapport" />

        </android.support.v7.widget.CardView>

        <!--Don't forget to add dot progress bar later-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewCentre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/roboto_black"
                android:text="@string/objectif_de_la_visite"
                android:textColor="@color/black_variant"
                android:textSize="16sp" />


        </LinearLayout>


        <EditText
            android:id="@+id/ed_promesse_obtenue"
            style="@style/anOtherRoundedTextEditTheme"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/hint_promesse_obtenue" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_suivant_etape_4"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        android:text="@string/suivant"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</FrameLayout>