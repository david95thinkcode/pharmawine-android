<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/profilage_medicalTeam_nestedLayout_step_fragment_style"
    tools:context=".fragments.profilage.Step1MedicalTeamClientFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lay_birthday"
            style="@style/margin_top_and_bottom_12_dp_style"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/birthday"
                android:textColor="@color/bpDark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/tv_day"
                    style="@style/edit_text_bordered_lg_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:hint="@string/jour"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinner_month"
                    style="@style/edit_text_bordered_lg_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/tv_year"
                    style="@style/edit_text_bordered_lg_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/annee"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_nationality"
            style="@style/margin_top_and_bottom_12_dp_style"
            android:layout_height="75dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/nationality"
                android:textColor="@color/bpDark_gray" />

            <Spinner
                android:id="@+id/spinner_nationality"
                style="@style/edit_text_bordered_lg_style"
                android:layout_width="match_parent"
                android:layout_height="42dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/margin_top_and_bottom_12_dp_style"
            android:layout_height="77dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/marital_status"
                android:textColor="@color/bpDark_gray" />

            <Spinner
                android:id="@+id/spinner_marital_status"
                style="@style/edit_text_bordered_lg_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/bpDark_gray" />


        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>