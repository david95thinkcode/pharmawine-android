    <TextView
        android:id="@+id/tv_item_cim"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:text="20" />

    <TextView
        android:id="@+id/tv_item_pcg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="35dp"
        android:text="20" />

    <TextView
        android:id="@+id/tv_item_pcm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:text="20" />
