                android:layout_height="match_parent"
                android:layout_weight="50"
                app:cardCornerRadius="3dp"
                android:layout_margin="@dimen/menu_card_margin"
                app:cardElevation="3dp">

                <LinearLayout
                    android:id="@+id/cv_menu_infos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:onClick="clicksHandler">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/information"
                        android:padding="@dimen/menu_card_img_padding"
                        android:scaleType="fitCenter"
                        android:tint="@color/darker_grey"
                        android:layout_marginTop="@dimen/menu_card_img_marginTop"
                        android:layout_weight="80"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:gravity="top|center_horizontal"
                        android:text="@string/menu_infos_title"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/menu_card_margin"
                android:layout_weight="50"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:id="@+id/cv_menu_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple"
                    android:clickable="true"
                    android:onClick="clicksHandler"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/menu_card_img_marginTop"
                        android:layout_weight="80"
                        android:padding="@dimen/menu_card_img_padding"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logout"
                        android:tint="@color/darker_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:gravity="top|center_horizontal"
                        android:text="@string/menu_logout_title" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>