<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_visite_in_progress"
    tools:context=".activities.VisiteInProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profil_client"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/light_grey"
                android:src="@drawable/profil_sup"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/tv_nom_client"
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Ablonon Véronique"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black_variant"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_type_client"
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Médecin généraliste"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_category_client"
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_regular"
                android:text="CFG"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_gray" />

            <TextView
                android:id="@+id/tv_v_process"
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/title_activity_visite_in_progress"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_gray"
                android:textSize="14sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_visit_fini"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            android:background="@color/colorAccent"
            android:text="@string/visite_terminee"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>