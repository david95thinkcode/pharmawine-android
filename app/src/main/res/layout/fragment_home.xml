<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandable="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:padding="@dimen/fragments_padding"
    tools:context=".fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_home_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/darker_grey"
            app:cardCornerRadius="23dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="20"
                    android:padding="12dp"
                    android:src="@drawable/calendar"
                    android:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tv_home_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:gravity="center_vertical"
                    android:paddingLeft="45dp"
                    android:text="09 Octobre 2018"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:padding="10dp"
                        android:src="@drawable/target"
                        android:tint="@color/light_grey" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="70"
                        android:gravity="center_vertical"
                        android:text="Objectif journalier"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:id="@+id/daily_progressbar"
                        android:layout_width="0dp"
                        android:layout_height="13dp"
                        android:layout_weight="85"
                        app:rcBackgroundColor="@color/light_grey"
                        app:rcBackgroundPadding="0dp"
                        app:rcMax="100"
                        app:rcProgress="45"
                        app:rcProgressColor="@color/green"
                        app:rcRadius="15dp" />

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="15"
                        android:gravity="center|end"
                        android:text="100%" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp">

                    <com.robertlevonyan.views.expandable.Expandable
                        android:id="@+id/expandable_clients_remaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:foregroundTint="@color/darker_grey"
                        android:paddingRight="10dp"
                        app:exp_animateExpand="true"
                        app:exp_expandIndicator="@drawable/view_list">

                        <include
                            android:id="@+id/header"
                            layout="@layout/header_home_clients_remaining_view" />

                        <include
                            android:id="@+id/content"
                            layout="@layout/content_home_clients_remaining_view" />
                    </com.robertlevonyan.views.expandable.Expandable>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="3dp">

                    <com.robertlevonyan.views.expandable.Expandable
                        android:id="@+id/expandable_clients_seen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:foregroundTint="@color/darker_grey"
                        android:paddingRight="10dp"
                        app:exp_animateExpand="true"
                        app:exp_expandIndicator="@drawable/view_list">

                        <include
                            android:id="@+id/header"
                            layout="@layout/header_home_clients_seen_view" />

                        <include
                            android:id="@+id/content"
                            layout="@layout/content_home_clients_seen_view" />
                    </com.robertlevonyan.views.expandable.Expandable>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_bottom_fabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="55dp"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/grey"
            android:src="@drawable/network"
            android:tint="@android:color/white"
            android:layout_marginBottom="5dp"
            app:elevation="3dp"
            app:borderWidth="0dp" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/fab_network"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="14dp"
            app:contentPadding="2dp">

            <TextView
                android:id="@+id/tv_network_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="RÃ©seau Denk Pharma"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_see_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:elevation="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/eye_outline"
            android:tint="@android:color/white" />
    </RelativeLayout>

</FrameLayout>