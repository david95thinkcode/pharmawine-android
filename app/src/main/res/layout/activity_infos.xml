<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            app:cardElevation="2dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/light_grey"
                    android:src="@drawable/profil_sup"
                    app:civ_border_color="@color/grey"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tv_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Délégué médical à Promed"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/project_grey" />

                <TextView
                    android:id="@+id/tv_network_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:text="Réseau - Denk Pharma"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/project_grey" />

                <ProgressBar
                    android:id="@+id/progressBar_Infos"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/nom"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_first_name"
                    style="@style/edit_text_bordered_user_info_style" />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/prenom"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_last_name"
                    style="@style/edit_text_bordered_user_info_style" />
            </LinearLayout>


            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/sex"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_sex"
                    style="@style/edit_text_bordered_user_info_style" />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/birthday"
                    android:textColor="@color/bpDark_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="30">

                        <EditText
                            android:id="@+id/et_day_birthday"
                            style="@style/edit_text_bordered_user_info_style"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="40">

                        <EditText
                            android:id="@+id/et_month_birthday"
                            style="@style/edit_text_bordered_user_info_style"
                            android:textAlignment="center"
                            android:textColor="@color/black_variant" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="30">

                        <EditText
                            android:id="@+id/et_year_birthday"
                            style="@style/edit_text_bordered_user_info_style"
                            android:textAlignment="center" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/marital_status"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_marital_status"
                    style="@style/edit_text_bordered_user_info_style" />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/address"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_address"
                    style="@style/edit_text_bordered_user_info_style"
                    android:lines="4" />

            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/telephone_1"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_phone_number1"
                    style="@style/edit_text_bordered_user_info_style"
                    android:textColor="@color/black_variant" />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/telephone_2"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_phone_number2"
                    style="@style/edit_text_bordered_user_info_style"
                    android:textColor="@color/black_variant" />
            </LinearLayout>

            <LinearLayout
                style="@style/margin_top_and_bottom_12_dp_style"
                android:layout_height="77dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/email"
                    android:textColor="@color/bpDark_gray" />

                <EditText
                    android:id="@+id/et_email"
                    style="@style/edit_text_bordered_user_info_style" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>