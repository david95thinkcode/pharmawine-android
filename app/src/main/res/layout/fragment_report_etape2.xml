<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.rapport.ReportEtape2Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="30dp"
            app:contentPadding="2dp">

            <ImageButton
                android:id="@+id/imageButtoBackToEtape1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:contentDescription="chevronBack"
                android:src="@drawable/chevron_left" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/rapport" />

        </android.support.v7.widget.CardView>

        <!--Don't forget to add dot progress bar later-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewZone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="@string/zone"
                    android:textColor="@color/black_variant"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/changer_si_pas_correcte"
                    android:textColor="@color/darker_grey" />
            </LinearLayout>


            <Spinner
                android:id="@+id/choix_zone_pour_rapport"
                style="@style/edit_text_bordered_lg_style"
                android:layout_width="350dp"
                android:layout_height="36dp"
                android:layout_marginTop="12dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_suivant_etape_2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"
        android:text="@string/suivant"
        android:textColor="@android:color/white"
        android:textSize="13sp" />
</FrameLayout>